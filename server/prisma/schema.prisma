generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum SignalType {
  SKIP
  LIKE
  DWELL
  VOLUME
  CLICK
  SEARCH
  OTHER
}

enum QueueSource {
  MANUAL
  SYSTEM
  AI
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  username    String    @unique
  password    String
  createdAt   DateTime  @default(now())
  status      String?   // e.g., ACTIVE, BANNED
  lastLoginAt DateTime?

  // Relations
  hostedRooms Room[]       @relation("Host")
  memberOf    RoomMember[]
  playlists   Playlist[]
  likedTracks LikedTrack[]
  history     ListeningHistory[]
  friends     Friendship[]       @relation("UserFriends")
  friendOf    Friendship[]       @relation("FriendUsers")
  signals     UserSignal[]
  contextLogs ContextLog[]

  // Enterprise stats & queues
  userQueue  UserQueue[]
  trackStats UserTrackStats[]

  @@index([createdAt])
}

model Room {
  id             String   @id @default(uuid())
  code           String   @unique
  name           String
  hostId         String
  host           User     @relation("Host", fields: [hostId], references: [id])
  isPlaying      Boolean  @default(false)
  currentTrackId String?
  position       Int      @default(0) // milliseconds
  updatedAt      DateTime @updatedAt

  members RoomMember[]
  queue   RoomQueue[]

  @@index([hostId])
  @@index([updatedAt])
}

model RoomMember {
  id       String   @id @default(uuid())
  userId   String?
  user     User?    @relation(fields: [userId], references: [id])
  roomId   String
  room     Room     @relation(fields: [roomId], references: [id])
  joinedAt DateTime @default(now())

  @@index([roomId])
  @@index([userId])
}

model Track {
  id           String  @id @default(uuid())
  pipedId      String  @unique
  title        String
  artist       String
  album        String?
  thumbnailUrl String?
  duration     Int // in seconds

  // relations
  playlists PlaylistTrack[]
  queues    RoomQueue[]
  likedBy   LikedTrack[]
  history   ListeningHistory[]
  signals   UserSignal[]
  features  TrackFeature?

  // Stats & queues
  globalPlayCount Int                @default(0)
  userStats       UserTrackStats[]
  regionStats     TrackRegionStats[]
  userQueues      UserQueue[]

  @@index([title])
  @@index([artist])
  @@index([globalPlayCount])
}

model LikedTrack {
  id      String   @id @default(uuid())
  userId  String
  user    User     @relation(fields: [userId], references: [id])
  trackId String
  track   Track    @relation(fields: [trackId], references: [id])
  likedAt DateTime @default(now())

  @@unique([userId, trackId])
  @@index([userId])
  @@index([trackId])
}

model Playlist {
  id     String          @id @default(uuid())
  name   String
  userId String
  user   User            @relation(fields: [userId], references: [id])
  tracks PlaylistTrack[]

  @@index([userId])
}

model PlaylistTrack {
  id         String   @id @default(uuid())
  playlistId String
  playlist   Playlist @relation(fields: [playlistId], references: [id])
  trackId    String
  track      Track    @relation(fields: [trackId], references: [id])
  order      Int // 'order' is a reserved word in some DBs; keep as quoted alias

  @@unique([playlistId, trackId])
  @@index([playlistId, order])
  @@index([trackId])
}

model RoomQueue {
  id        String   @id @default(uuid())
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])
  trackId   String
  track     Track    @relation(fields: [trackId], references: [id])
  order     Int
  addedBy   String? // userId
  isPlayed  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([roomId, order])
  @@index([trackId])
  @@index([createdAt])
}

model ListeningHistory {
  // This table will be partitioned (see notes below)
  id             String   @default(uuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  trackId        String
  track          Track    @relation(fields: [trackId], references: [id])
  playedAt       DateTime @default(now())
  durationPlayed Int? // seconds
  context        String? // e.g., "playlist", "search", "radio"
  createdAt      DateTime @default(now())

  @@id([id, playedAt], map: "ListeningHistory_partitioned_pkey")
  @@index([userId, playedAt])
  @@index([trackId, playedAt])
  @@index([playedAt])
}

model Friendship {
  id        String           @id @default(uuid())
  userId    String
  user      User             @relation("UserFriends", fields: [userId], references: [id])
  friendId  String
  friend    User             @relation("FriendUsers", fields: [friendId], references: [id])
  status    FriendshipStatus @default(PENDING) // PENDING, ACCEPTED, BLOCKED
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@unique([userId, friendId])
  @@index([userId, status])
  @@index([friendId, status])
}

model UserSignal {
  // This table will be partitioned (see notes below)
  id        String     @default(uuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  trackId   String
  track     Track      @relation(fields: [trackId], references: [id])
  type      SignalType   // SKIP, LIKE, DWELL, VOLUME, CLICK, SEARCH, etc.
  value     Float?   // e.g., dwell time in seconds, volume level, rating
  metadata  Json?    // Extra context (device, location, etc.)
  createdAt DateTime @default(now())

  @@id([id, createdAt], map: "UserSignal_partitioned_pkey")
  @@index([userId, type, createdAt])
  @@index([trackId, type, createdAt])
  @@index([createdAt])
}

model TrackFeature {
  id        String   @id @default(uuid())
  trackId   String   @unique
  track     Track    @relation(fields: [trackId], references: [id])
  
  // Audio Features
  bpm            Float?
  energy         Float?
  danceability   Float?
  acousticness   Float?
  instrumentalness Float?
  valence        Float? // Mood
  
  // Metadata Features
  genres         String[]
  moods          String[]
  instruments    String[]
  
  // Computed Features
  embedding      Json? // Vector embedding (list of floats)
  
  updatedAt      DateTime @updatedAt

  @@index([bpm])
  @@index([energy])
  @@index([danceability])
}

model ContextLog {
  // Partition this (see notes)
  id           String   @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  timestamp    DateTime @default(now())
  
  // Context Signals
  locationType String? // home, office, gym
  deviceType   String? // mobile, desktop
  networkType  String? // wifi, 4g
  timeOfDay    String? // morning, night
  dayOfWeek    String? // monday, sunday
  weather      String? // sunny, rainy (future)
  
  metadata     Json?

  @@id([id, timestamp], map: "ContextLog_partitioned_pkey")
  @@index([userId, timestamp])
  @@index([timestamp])
}

model UserQueue {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  trackId   String
  track     Track    @relation(fields: [trackId], references: [id])
  position  Float    // For easy reordering (lexicographical or float-based)
  source    String   // MANUAL, SYSTEM, AI
  createdAt DateTime @default(now())

  @@index([userId, position])
}

model UserTrackStats {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  trackId      String
  track        Track    @relation(fields: [trackId], references: [id])
  playCount    Int      @default(0)
  skipCount    Int      @default(0)
  lastPlayedAt DateTime @default(now())

  @@unique([userId, trackId])
  @@index([userId, playCount(sort: Desc)]) // Fast "Top Tracks"
}

model TrackRegionStats {
  id            String   @id @default(uuid())
  trackId       String
  track         Track    @relation(fields: [trackId], references: [id])
  countryCode   String
  playCount     Int      @default(0)
  trendingScore Float    @default(0)
  updatedAt     DateTime @updatedAt

  @@unique([trackId, countryCode])
  @@index([countryCode, trendingScore(sort: Desc)])
}
